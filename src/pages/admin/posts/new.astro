---
import Layout from '../../../layouts/Layout.astro';
---

<Layout title="New Post - Admin">
  <div class="admin-container">
    <div class="page-header">
      <h1>Create New Post</h1>
      <a href="/admin/posts" class="btn-secondary">‚Üê Back to Posts</a>
    </div>

    <form id="postForm" class="post-editor">
      <div class="form-row">
        <div class="form-group flex-1">
          <label for="title">Title *</label>
          <input type="text" id="title" name="title" required />
        </div>
        
        <div class="form-group flex-1">
          <label for="slug">Slug *</label>
          <input type="text" id="slug" name="slug" required />
          <small>Auto-generated from title</small>
        </div>
      </div>

      <div class="form-group">
        <label for="excerpt">Excerpt</label>
        <textarea id="excerpt" name="excerpt" rows="2"></textarea>
        <small>Brief description (auto-generated if empty)</small>
      </div>

      <div class="form-group">
        <label for="content">Content (Markdown) *</label>
        <div class="editor-toolbar">
          <button type="button" class="toolbar-btn" data-md="**bold**">B</button>
          <button type="button" class="toolbar-btn" data-md="*italic*">I</button>
          <button type="button" class="toolbar-btn" data-md="## Heading">H</button>
          <button type="button" class="toolbar-btn" data-md="[link](url)">Link</button>
          <button type="button" class="toolbar-btn" data-md="`code`">Code</button>
          <button type="button" class="toolbar-btn" data-md="```\ncode block\n```">Block</button>
          <button type="button" id="previewBtn" class="toolbar-btn-primary">Preview</button>
        </div>
        <textarea id="content" name="content" rows="20" required></textarea>
        <div id="preview" class="markdown-preview" style="display: none;"></div>
      </div>

      <div class="form-row">
        <div class="form-group flex-1">
          <label for="author">Author *</label>
          <input type="text" id="author" name="author" required />
        </div>
        
        <div class="form-group flex-1">
          <label for="status">Status *</label>
          <select id="status" name="status">
            <option value="draft">Draft</option>
            <option value="published">Published</option>
          </select>
        </div>
      </div>

      <div class="form-group">
        <label for="featured_image">Featured Image URL</label>
        <input type="text" id="featured_image" name="featured_image" placeholder="/api/images/..." />
        <small>Upload images via the image upload API</small>
      </div>

      <div id="error-message" class="error-message" style="display: none;"></div>

      <div class="form-actions">
        <button type="submit" class="btn-primary">Create Post</button>
        <a href="/admin/posts" class="btn-secondary">Cancel</a>
      </div>
    </form>
  </div>
</Layout>

<style>
  .admin-container {
    max-width: 1000px;
    margin: 0 auto;
  }

  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }

  .page-header h1 {
    font-size: 2rem;
    color: #1f2937;
  }

  .post-editor {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .form-row {
    display: flex;
    gap: 1rem;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .flex-1 {
    flex: 1;
  }

  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    color: #374151;
    font-weight: 600;
  }

  .form-group input,
  .form-group textarea,
  .form-group select {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid #d1d5db;
    border-radius: 6px;
    font-size: 1rem;
    font-family: inherit;
  }

  .form-group textarea {
    font-family: 'Monaco', 'Courier New', monospace;
    resize: vertical;
  }

  .form-group small {
    display: block;
    margin-top: 0.25rem;
    color: #6b7280;
    font-size: 0.875rem;
  }

  .editor-toolbar {
    display: flex;
    gap: 0.5rem;
    padding: 0.5rem;
    background: #f9fafb;
    border: 1px solid #d1d5db;
    border-bottom: none;
    border-radius: 6px 6px 0 0;
  }

  .toolbar-btn {
    padding: 0.375rem 0.75rem;
    background: white;
    border: 1px solid #d1d5db;
    border-radius: 4px;
    cursor: pointer;
    font-weight: 600;
    transition: background 0.2s;
  }

  .toolbar-btn:hover {
    background: #f3f4f6;
  }

  .toolbar-btn-primary {
    padding: 0.375rem 0.75rem;
    background: #2563eb;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-weight: 600;
    margin-left: auto;
  }

  .toolbar-btn-primary:hover {
    background: #1d4ed8;
  }

  #content {
    border-radius: 0 0 6px 6px;
  }

  .markdown-preview {
    padding: 1rem;
    border: 1px solid #d1d5db;
    border-radius: 6px;
    min-height: 300px;
    background: white;
  }

  .error-message {
    background: #fef2f2;
    border: 1px solid #fecaca;
    color: #991b1b;
    padding: 1rem;
    border-radius: 6px;
    margin-bottom: 1rem;
  }

  .form-actions {
    display: flex;
    gap: 1rem;
  }

  .btn-primary,
  .btn-secondary {
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 6px;
    font-weight: 600;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
  }

  .btn-primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
  }

  .btn-secondary {
    background: #6b7280;
    color: white;
  }

  .btn-primary:hover,
  .btn-secondary:hover {
    opacity: 0.9;
  }
</style>

<script>
  import { markdownToHtml, generateSlug, extractExcerpt } from '../../../lib/markdown';

  const form = document.getElementById('postForm') as HTMLFormElement;
  const titleInput = document.getElementById('title') as HTMLInputElement;
  const slugInput = document.getElementById('slug') as HTMLInputElement;
  const contentTextarea = document.getElementById('content') as HTMLTextAreaElement;
  const excerptTextarea = document.getElementById('excerpt') as HTMLTextAreaElement;
  const previewDiv = document.getElementById('preview') as HTMLDivElement;
  const previewBtn = document.getElementById('previewBtn') as HTMLButtonElement;
  const errorMessage = document.getElementById('error-message') as HTMLDivElement;

  // Auto-generate slug from title
  titleInput.addEventListener('input', () => {
    if (!slugInput.value || slugInput.dataset.autoGenerated === 'true') {
      slugInput.value = generateSlug(titleInput.value);
      slugInput.dataset.autoGenerated = 'true';
    }
  });

  slugInput.addEventListener('input', () => {
    slugInput.dataset.autoGenerated = 'false';
  });

  // Markdown toolbar buttons
  document.querySelectorAll('.toolbar-btn[data-md]').forEach(btn => {
    btn.addEventListener('click', () => {
      const markdown = (btn as HTMLElement).dataset.md || '';
      const start = contentTextarea.selectionStart;
      const end = contentTextarea.selectionEnd;
      const text = contentTextarea.value;
      
      contentTextarea.value = text.substring(0, start) + markdown + text.substring(end);
      contentTextarea.focus();
      contentTextarea.selectionStart = start + markdown.indexOf('**') + 2;
      contentTextarea.selectionEnd = start + markdown.indexOf('**') + 2;
    });
  });

  // Preview toggle
  let previewMode = false;
  previewBtn.addEventListener('click', () => {
    previewMode = !previewMode;
    
    if (previewMode) {
      const html = markdownToHtml(contentTextarea.value);
      previewDiv.innerHTML = html;
      previewDiv.style.display = 'block';
      contentTextarea.style.display = 'none';
      previewBtn.textContent = 'Edit';
    } else {
      previewDiv.style.display = 'none';
      contentTextarea.style.display = 'block';
      previewBtn.textContent = 'Preview';
    }
  });

  // Form submission
  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(form);
    const data: any = {};
    
    formData.forEach((value, key) => {
      data[key] = value;
    });

    // Auto-generate excerpt if empty
    if (!data.excerpt) {
      data.excerpt = extractExcerpt(data.content);
    }

    // Convert markdown to HTML
    data.content = markdownToHtml(data.content);
    
    // Set published date
    data.published_date = new Date().toISOString();

    errorMessage.style.display = 'none';

    try {
      const response = await fetch('/api/posts', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(data),
      });

      const result = await response.json();

      if (response.ok && result.success) {
        window.location.href = '/admin/posts';
      } else {
        errorMessage.textContent = result.error || 'Failed to create post';
        errorMessage.style.display = 'block';
      }
    } catch (error) {
      errorMessage.textContent = 'Network error. Please try again.';
      errorMessage.style.display = 'block';
    }
  });
</script>
