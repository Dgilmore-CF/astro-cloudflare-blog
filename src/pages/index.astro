---
import Layout from '../layouts/Layout.astro';
import PostCard from '../components/PostCard.astro';
import { BlogDB } from '../lib/db';

const runtime = Astro.locals.runtime;
let posts = [];
let error = null;

if (runtime?.env?.DB) {
  try {
    const db = new BlogDB(runtime.env.DB);
    posts = await db.getPosts('published', 10, 0);
  } catch (e) {
    error = 'Failed to load posts';
    console.error(e);
  }
} else {
  error = 'Database not configured';
}
---

<Layout title="CloudBlog - Modern Astro Blog" description="A modern blog powered by Astro, Cloudflare Workers, D1, and R2">
  <div class="hero">
    <h1>Welcome to CloudBlog</h1>
    <p>A modern blog built with Astro and Cloudflare's edge platform</p>
  </div>

  {error && (
    <div class="error-banner">
      <p>{error}</p>
      <p class="error-help">Make sure to run the setup commands in README.md to initialize your D1 database.</p>
    </div>
  )}

  <section class="posts-section">
    <h2>Latest Posts</h2>
    {posts.length === 0 && !error && (
      <div class="no-posts">
        <p>No posts yet. Create your first post using the API!</p>
        <code>POST /api/posts</code>
      </div>
    )}
    {posts.length > 0 && (
      <div class="posts-grid">
        {posts.map((post) => (
          <PostCard
            title={post.title}
            slug={post.slug}
            excerpt={post.excerpt}
            featuredImage={post.featured_image}
            author={post.author}
            publishedDate={post.published_date}
          />
        ))}
      </div>
    )}
  </section>
</Layout>

<style>
  .hero {
    text-align: center;
    padding: 4rem 0;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border-radius: 12px;
    margin-bottom: 3rem;
  }

  .hero h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .hero p {
    font-size: 1.25rem;
    opacity: 0.9;
  }

  .error-banner {
    background: #fef2f2;
    border: 1px solid #fecaca;
    border-radius: 8px;
    padding: 1rem;
    margin-bottom: 2rem;
    color: #991b1b;
  }

  .error-help {
    margin-top: 0.5rem;
    font-size: 0.875rem;
    color: #7f1d1d;
  }

  .posts-section h2 {
    font-size: 2rem;
    margin-bottom: 2rem;
    color: #1f2937;
  }

  .no-posts {
    background: #f9fafb;
    border: 2px dashed #d1d5db;
    border-radius: 8px;
    padding: 3rem;
    text-align: center;
  }

  .no-posts p {
    margin-bottom: 1rem;
    color: #6b7280;
  }

  .no-posts code {
    background: #374151;
    color: #f3f4f6;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    font-family: 'Courier New', monospace;
  }

  .posts-grid {
    display: grid;
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .posts-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
